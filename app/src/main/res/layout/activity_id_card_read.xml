<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:orientation="vertical"
    tools:context=".Activity.IdCardReadActivity">

    <include layout="@layout/base_nav_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/card_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="#cdd4e0"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="证件号码"
                android:textColor="#7c8ba5"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/card_line1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/card_code_edit"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:hint="请输入证件号"
                android:textColorHint="#cdd4e0"
                android:textCursorDrawable="@drawable/cussor_color"
                app:layout_constraintBottom_toTopOf="@id/card_line1"
                app:layout_constraintLeft_toRightOf="@+id/card_text1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/card_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="#cdd4e0"
                app:layout_constraintTop_toTopOf="@id/card_line1" />

            <TextView
                android:id="@+id/card_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="联系电话"
                android:textColor="#7c8ba5"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/card_line3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_line2" />

            <EditText
                android:id="@+id/card_phone_edit"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:hint="请输电话"
                android:textColorHint="#cdd4e0"
                android:textCursorDrawable="@drawable/cussor_color"
                app:layout_constraintBottom_toTopOf="@id/card_line3"
                app:layout_constraintLeft_toRightOf="@+id/card_text1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_line2" />

            <View
                android:id="@+id/card_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="#cdd4e0"
                app:layout_constraintTop_toTopOf="@id/card_line2" />

            <TextView
                android:id="@+id/card_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="姓名"
                android:textColor="#7c8ba5"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/card_line2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_line1" />

            <EditText
                android:id="@+id/card_name_edit"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:hint="请输入姓名"
                android:textColorHint="#cdd4e0"
                android:textCursorDrawable="@drawable/cussor_color"
                app:layout_constraintBottom_toTopOf="@id/card_line2"
                app:layout_constraintLeft_toRightOf="@+id/card_text1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_line1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="委托人照片"
                android:textColor="#7c8ba5"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/card_line4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_line3" />

            <View
                android:id="@+id/card_line4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="50dp"
                android:background="#cdd4e0"
                app:layout_constraintTop_toTopOf="@id/card_line3" />

            <View
                android:id="@+id/card_line5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="#cdd4e0"
                app:layout_constraintTop_toBottomOf="@id/card_image_button" />

            <Button
                android:id="@+id/card_image_button"
                android:layout_width="140dp"
                android:layout_height="200dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/card_border"
                android:drawablePadding="25dp"
                android:drawableTop="@mipmap/ksdj_img_nfc_photo"
                android:gravity="top|center_horizontal"
                android:paddingTop="60dp"
                android:text="证件照片"
                android:textColor="#c1c5ca"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/card_line5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_line4" />

            <Button
                android:id="@+id/card_phone_button"
                android:layout_width="140dp"
                android:layout_height="200dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/card_border"
                android:drawablePadding="25dp"
                android:drawableTop="@mipmap/ksdj_btn_camera_big"
                android:gravity="top|center_horizontal"
                android:paddingTop="60dp"
                android:text="证件照片"
                android:textColor="#c1c5ca"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/card_line5"
                app:layout_constraintLeft_toRightOf="@id/card_image_button"
                app:layout_constraintTop_toTopOf="@id/card_line4" />

            <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="50dp"-->
            <!--/>-->

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</LinearLayout>
