<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_work"
    tools:context=".Activity.LoginActivity">

    <include
        android:id="@+id/incl_title"
        layout="@layout/allbar_back" />

    <LinearLayout
        android:id="@+id/Lv_zhong"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incl_title"
        android:layout_marginTop="100dp"
        android:background="#00000000"
        android:orientation="vertical"
        android:paddingLeft="38dp"
        android:paddingRight="38dp">

        <RelativeLayout
            android:id="@+id/rv_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/input_normal">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:hint="用户名"
                android:maxLength="20"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#949ea8"
                android:textSize="14sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rv_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@mipmap/input_normal">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#949ea8"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lv_zhong"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ty_btn_bgcolor"
        android:gravity="center"
        android:text="登录"
        android:textColor="@drawable/ty_btn_wzcolor"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_mmcz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码重置"
                android:textColor="#949ea8"
                android:textSize="16sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#949ea8" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>