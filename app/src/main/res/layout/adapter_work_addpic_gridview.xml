<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photo_img_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_photo" />

    <ImageView
        android:id="@+id/delete_img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="11dp"
        android:paddingEnd="5dp"
        android:paddingLeft="11dp"
        android:paddingRight="5dp"
        android:paddingStart="11dp"
        android:paddingTop="5dp"
        app:srcCompat="@mipmap/delete"
        app:layout_constraintTop_toTopOf="@+id/photo_img_view"
        app:layout_constraintRight_toRightOf="@+id/photo_img_view"/>

</android.support.constraint.ConstraintLayout>